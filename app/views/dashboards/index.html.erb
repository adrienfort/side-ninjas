<div class="back-btn">
  <%= link_to projects_path do%>
    <i class="fas fa-long-arrow-alt-left"></i>
    <p>Back</p>
  <% end %>
</div>
<div class="page-title-box">
  <div class="page-title-description">
    <div class="page-title">
      <h1>All</h1>
      <div class="project-name">
        <h1>my project</h1>
      </div>
    </div>
    <div class="under-title">
      <div class="project-tag-line">
        <p>See, edit and manage your projects here.</p>
      </div>
    </div>
  </div>
  <div class="first-important-btn">
    <i class="fas fa-plus"></i>
    <%= link_to "SAVE CHANGES", root_path, class:"first-important-btn" %>
  </div>
</div>

<div class="container-dashboard">
<% @projects.each do |project|%>
    <div class="row mt-5">
      <div class="col-12">
        <div class="resum-project-box">
          <div class="project-header">
            <div class="resum-project-title">
              <h5><%= project.title %> </h5> <div class="admin-btn"> <p>Admin</p> </div>
            </div>
            <div class="pending-request-btn">
              <i class="fas fa-hourglass-half"></i>
              <p><%= distance_of_time_in_words(project.start_date, Date.today) %> ago</p>
            </div>
          </div>
          <hr>
          <div class="resum-project-content">
            <div class="search-project-description">
              <h5><%= project.tag_line %></h5>
              <p><%= project.description %></p>
            </div>
            <div class="resum-project-images">
              <div class="resum-project-pictures">
                <% project.participations.each do |participation| %>
                  <% if participation.user.photo.attached? %>
                    <%= cl_image_tag participation.user.photo.key, class: "avatar-large mr-3" %>
                  <%# else %>
                    <%#= image_tag 'alain-finkielkraut.jpg', class: "avatar-large mr-3" %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="bottom-search-project">
              <div class="resum-project-tags">
                <% project.project_languages.each do |project_language| %>
                  <div class="skills-btn">
                    <%= cl_image_tag project_language.language.photo.key, class: "language-tag-img" %>
                    <p><%= project_language.language.name %></p>
                  </div>
                <% end %>
              </div>
              <div class="modify-btn">
                <%= link_to edit_project_path(project) do%>
                  <i class="fas fa-pen"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>









<%#= form_tag projects_path, method: :get do %>
  <%#= select_tag :language, options_for_select(@languages, params[:language]),
    multiple: true, class: 'select2-multiple'
  %>
  <%#= submit_tag "Search", class: "btn btn-primary" %>
<%# end %>
