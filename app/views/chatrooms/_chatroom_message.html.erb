<div class="message-container" id="message-<%= message.id %>">
    <% if message.user.id == current_user.id %>
    <div class="container-current-user">
      <div class="current-user text-right">
        <div class="message-user mx-2">
            <i class="author">
              <span><%= message.user.first_name %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>
        </div>
        <div class="photo-writer">
          <%# if i == 0 || chatroom.messages[i - 1].user != message.user  %>
              <%= cl_image_tag message.user.photo.key, class:"avatar-semi-square" %>
          <%# end %>
        </div>
      </div>
    </div>
    <% else %>
    <div class="container-receiver">
      <div class="receiver">
        <div class="photo-writer">
          <%# if i == 0 || chatroom.messages[i - 1].user != message.user  %>
              <%= cl_image_tag message.user.photo.key, class:"avatar-semi-square" %>
          <%# end %>
        </div>
        <div class="message-user ml-2">
            <i class="author">
              <span><%= message.user.first_name %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

